{
  "name": "app",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "prompt": "node prompt-server.js",
    "build:web": "expo export:web --clear",
    "export:web": "expo export:web",
    "serve:web": "node web-server.js",
    "serve:build": "node scripts/dev-static-server.js",
    "desktop": "electron electron/main.js",
    "clean": "powershell -ExecutionPolicy Bypass -File scripts/clean.ps1",
    "clean:deep": "powershell -ExecutionPolicy Bypass -File scripts/clean.ps1 -Deep",
    "clean:builder-cache": "powershell -ExecutionPolicy Bypass -File scripts/clean-builder-cache.ps1",
    "package:win": "npm run build:web && electron-builder --win --x64",
    "package:win:new": "npm run build:web && electron-builder --win nsis --config.directories.output=dist_electron_new",
    "package:portable": "npm run build:web && electron-builder --win portable",
    "install:silent": "powershell -ExecutionPolicy Bypass -File scripts/install-silent.ps1",
    "package:install:auto": "powershell -ExecutionPolicy Bypass -File scripts/package-and-install.ps1",
    "ci": "powershell -ExecutionPolicy Bypass -File scripts/ci.ps1 -RunSilentInstall"
  },
  "dependencies": {
    "@react-navigation/native": "^7.1.19",
    "@react-navigation/native-stack": "^7.6.0",
    "cors": "^2.8.5",
    "expo": "~54.0.20",
    "expo-status-bar": "~3.0.8",
    "express": "^5.1.0",
    "jspdf": "^3.0.3",
    "nativewind": "^4.2.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "0.81.5",
    "react-native-safe-area-context": "^5.6.1",
    "react-native-screens": "^4.18.0",
    "react-native-web": "^0.21.0",
    "tailwindcss": "^3.4.18",
    "ws": "^8.18.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/react": "~19.1.0",
    "@types/ws": "^8.18.1",
    "app-builder-lib": "^26.0.12",
    "babel-preset-expo": "^54.0.6",
    "builder-util": "^26.0.7",
    "electron": "^30.0.0",
    "electron-builder": "^26.0.12",
    "typescript": "~5.9.2"
  },
  "build": {
    "appId": "com.mulfa.companion",
    "productName": "Mulfa Companion",
    "asar": false,
    "directories": {
      "output": "dist_electron",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "web-build/**/*",
      "electron/**/*",
      "global.css",
      "assets/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "Mulfa-Setup-${version}.exe"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "shortcutName": "Mulfa Companion"
    }
  },
  "private": true
}
